<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    namespace：必须与对应的接口全类名一致
    id:必须与对应接口的某个对应的方法名一致

 -->
<mapper namespace="ltd.cracks.service.front.product.ProductDao">
    <!--定义返回结果map-->
    <resultMap id="Product" type="ltd.cracks.service.front.product.Product">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="owner" property="owner" jdbcType="VARCHAR"/>
        <result column="message" property="message" jdbcType="VARCHAR"/>
        <result column="other" property="other" jdbcType="VARCHAR"/>
        <result column="insertTime" property="insertTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!--定义参数map-->
    <parameterMap id="Product" type="ltd.cracks.service.front.product.Product">
        <parameter property="id" jdbcType="BIGINT"/>
        <parameter property="owner" jdbcType="VARCHAR"/>
        <parameter property="message" jdbcType="VARCHAR"/>
        <parameter property="other" jdbcType="VARCHAR"/>
        <parameter property="insertTime" jdbcType="TIMESTAMP" />
    </parameterMap>

    <insert id="save" parameterMap="Product">
        insert into t_product(owner,message, other,insertTime,title) values(#{owner},#{message},#{other}, #{insertTime},#{title})
    </insert>

    <update id="update" parameterMap="Product">
        update t_product set owner=#{owner},message=#{message},other=#{other} where id=#{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from t_product where id=#{id}
    </delete>

    <!-- mybsits_config中配置的alias类别名,也可直接配置resultType为类路劲 -->
    <select id="findById" parameterType="int" resultMap="Product">
        select * from t_product where id=#{id}
    </select>

    <select id="findAll" resultMap="Product">
        select * from t_product
    </select>

</mapper>